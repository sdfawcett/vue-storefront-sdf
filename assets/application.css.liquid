.flex {
    display: flex;
}
.space-between {
    justify-content: space-between;
}
.column {
    flex-direction: column;
}

.row {
    flex-direction: row;
}

.half {
    width: 50%;
}
*, ::after, ::before {
    box-sizing: border-box;
}
