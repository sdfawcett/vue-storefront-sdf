/* START PRODUCT TEMPLATE */
.swiper-container-product-page {
    overflow: hidden;
    width: 100%;
    height: 100%;
}
.product-template {
    padding-top: 25px;
    display: grid;
    grid-template-columns: 50% 50%;
    justify-content: space-between;
    margin-bottom: 32px;
}
@media (max-width: 900px) {
    .product-template {
        grid-template-columns: 100%;
   }
}
.product-template .swiper-button-next::before {
    background: url('{{"cursor-arrow-right.svg" | asset_url }}') 24px center no-repeat;
    content: "";
    opacity: 0.25;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.15s;
    background-position: calc(100% - 30px);
}
.product-template .swiper-button-prev::before {
    background: url('{{"cursor-arrow-left.svg" | asset_url }}') 24px center no-repeat;
    content: "";
    opacity: 0.25;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.15s;
}
.product-images:hover .swiper-button-prev::before, .product-images:hover .swiper-button-next::before {
    opacity: 0;
}
.product-description-container {
    display: flex;
    flex-direction: column;
    padding:6rem;
}
.product-description {
    width: 100%;
    margin-bottom: 30px;
}

.product-description p {
    font-family:'Montserrat-Medium';
    letter-spacing: 1px;
    line-height: 1.2;
    font-size: 1.2rem;
    font-weight: 200;
}


@media (max-width: 900px) {
    .product-description {
        width: 100%;
        padding: 0;
   }
}
.product-title {
    margin-bottom: 100px;
    font-size: 30px;
    text-transform: uppercase;
    font-family: 'Montserrat-Medium', Arial, sans-serif;
}
.product-option-row {
    position: relative;
    user-select: none;
}
.product-option-label::before {
    content: "";
    width: 11px;
    height: 11px;
    position: absolute;
    right: 25px;
    top: 50%;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 9.5px 5.5px 0 5.5px;
    border-color: #149c54 transparent transparent transparent;
}

    

.product-option-label, .add-to-cart-button {
    padding: 25px;
    position: relative;
    border: solid;
    cursor: pointer;
    border-color: black;
    border-width: 1px 1px 0;
    border-right-color: transparent;
    border-left-color: transparent;
    background-color: white;
    font-size: 16px;
    width: 100%;
    text-align: left;
    font-family: 'Montserrat-Medium';
}
.add-to-cart-button {
    text-transform: uppercase;
    background-color: #149c54;
    margin-top: 2rem;
    padding: 25px;
    position: relative;
    border: solid;
    cursor: pointer;
    border-color: black;
    border-width: 0 1px 1px 0;
    border-right-color: transparent;
    border-left-color: transparent;
    font-size: 16px;
    width: 100%;
    color: #fff;
    text-align: center;
    overflow: hidden;
    z-index: 1;
}
.add-to-cart-button:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #149c54;
    z-index: -2;
  }
  .add-to-cart-button:before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background-color: #0c5e32;
    transition: all 0.3s;
    z-index: -1;
  }
  .add-to-cart-button:hover {
    color: #fff;
  }
  .add-to-cart-button:hover:before {
    width: 100%;
  }
  
.add-to-cart-button:hover {
    background-color: black;
    color: white;
}
.product-option-label:hover {
    background: #ededed;
}
.product-option-list {
    position: absolute;
    bottom: 70px;
    right: 0;
    left: 0;
    background-color: white;
    border: solid 1px black;
}
.product-option-item {
    padding: 25px;
    cursor: pointer;
    font-family: 'Montserrat-Medium';
}
.product-option-item:nth-child(n+2) {
    box-shadow: inset 0 1px #9a9a9a;
}
.product-option-item:hover {
    background-color: #0c5e32;
    color: white;
}
/* START MINI CART */
.mini-cart.hidden {
    transform: translateX(100%);
}
.mini-cart.hidden .mini-cart-close-button {
    opacity: 0;
    transition: none;
}
.mini-cart.hidden::before {
    opacity: 0;
}
.mini-cart-close-button {
    cursor: pointer;
    position: absolute;
    top: 25px;
    left: 25px;
    right: auto;
    color: inherit;
    transition: opacity 0.5s 0.1s, padding 0.15s;
}
.mini-cart {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    height: 100vh;
    width: 100%;
    z-index: 99;
    max-width: 350px;
    background-color: white;
    padding: 72px 25px 25px 25px;
    transition-property: transform;
}
.mini-cart::before {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    -webkit-box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    -moz-box-shadow: 0 4px 48px 36px rgba(0, 0, 0, 0.25);
    transition-property: opacity;
    z-index: -1;
}
@media (max-width: 599px) {
    .mini-cart {
        position: fixed;
        width: calc(100vw - 50px);
        height: 100%;
       /*overflow-x: hidden;
       */
   }
}
.mini-cart, .mini-cart::before {
    transition-duration: 1s;
    transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1);
}
.cart-form {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.cart-button {
    cursor: pointer;
    position: relative;
    transition: 0.15s;
    z-index: 999;
}
.cart-button:hover {
    padding-right: 15px;
}
.cart-button:hover .cart-arrow-icon {
    opacity: 1;
    right: 0;
}
.cart-arrow-icon {
    opacity: 0;
    width: 11.5px;
    height: 12px;
    position: absolute;
    top: 5px;
    right: -15px;
    transition: 0.15s;
    pointer-events: none;
}
.mini-cart-image-wrapper {
    width: 140px;
    margin-right: 25px;
}
.mini-cart-image-wrapper img {
    width: 100%;
}
.mini-cart-rows {
    border-top: 1px solid black;
    border-bottom: 1px solid black;
    height: 100%;
    overflow: auto;
}
.mini-cart-item {
    display: flex;
    padding: 25px 0;
}
.mini-cart-item-right {
    flex: 1;
}
.mini-cart-item a {
    color: #333;
}
.mini-cart-quantity {
    height: 25px;
    overflow: hidden;
    margin-top: 25px;
    position: relative;
    border: 1px solid;
    border-radius: 13px;
}
.mini-cart-quantity input {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 25px;
}
.mini-cart-quantity .mini-cart-quantity-button {
    width: 25px;
    position: absolute;
    top: -4px;
    bottom: 0;
    left: 0;
    cursor: pointer;
}
.mini-cart-quantity .mini-cart-quantity-button:last-of-type {
    left: auto;
    right: 0;
}
.checkout-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    border-radius: 25px;
    padding: 0 25px;
    position: relative;
    transition: 0.15s;
    padding-bottom: 1px;
    background: #149c54;
    color: white;
}
.checkout-button:hover {
    opacity: 0.85;
}
.checkout-subtotal {
    display: flex;
    justify-content: space-between;
    height: 72px;
    padding: 0 25px;
    line-height: 72px;
}
.outside {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
}
.cart-empty {
    opacity: 0.2;
    padding-top: 42px;
    font-size: 24px;
    line-height: 1.5;
}
/* START MENU DRAWER */

.menu-drawer-image-wrap {
    position: relative;
    width: 95%;
    height: auto;
}

.menu-drawer-image-wrap img {
    width: 100%;
    height: 100%;
}

.menu-drawer {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    height: 100vh;
    width: 100%;
    z-index: 99;
    max-width: 350px;
    background-color: white;
    padding: 72px 25px 25px 25px;
    transition: transform 0.9s cubic-bezier(0.165, 0.84, 0.44, 1), left 0.5s 0s;
}
