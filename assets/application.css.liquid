    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    box-shadow: 1px 3px 47px 37px rgba(0, 0, 0, 0.25);
    -webkit-box-shadow: 1px 3px 47px 37px rgba(0, 0, 0, 0.25);
    -moz-box-shadow: 1px 3px 47px 37px rgba(0, 0, 0, 0.25);
    transition-property: opacity;
    z-index: -1;
}
@media (max-width: 599px) {
    .menu-drawer {
        position: fixed;
        width: calc(100vw - 50px);
   }
}
.menu-drawer.hidden {
    transform: translateX(-100%);
}
.menu-drawer.hidden::before {
    opacity: 0;
}
.menu-drawer-inner {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
